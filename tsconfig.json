// tsconfig.json
{
  "compilerOptions": {
    // Modern targets compile faster and match Next's runtime
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    // Project hygiene
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,

    // Path alias (you already had this)
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    // Next.js plugin
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
